<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>
<div>
  <h2>Filters</h2>
  <%= form_tag contacts_path, :method => 'get', :id => "contacts_search" do %>
    <p>Name: <%= text_field_tag :name, params[:name] %></p>
    <p>Email: <%= text_field_tag :email, params[:email] %></p>
    <p>Age: <%= text_field_tag :age, params[:age] %></p>
    <p>State: <%= text_field_tag :state, params[:state] %></p>
    <p>Office: <%= text_field_tag :office, params[:office] %></p>
    <p><%= submit_tag "Search", :name => nil %></p>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Age</th>
      <th>state</th>
      <th>Office</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.age %></td>
        <td><%= contact.state %></td>
        <td><%= contact.office %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

